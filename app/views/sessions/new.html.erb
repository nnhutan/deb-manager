  <div class="row d-flex align-items-center justify-content-center" style="height: 90vh;" >
  <div class="col-md-6 col-md-offset-3">
<div class="d-flex align-items-center justify-content-between">
  <h2>Sign in</h2>
  <%= link_to "Back", root_path, class: 'btn btn-secondary' %>
</div>
<%= render 'shared/notice_messages' %>
  <%= form_with(url: login_path, scope: :session) do |f| %>
 <div class="mb-3">
  <%= f.label :email %>
  <%= f.email_field :email, class: 'form-control' %>
 </div>

 <div class="mb-3">
  <%= f.label :password %>
  <%= f.password_field :password, class: 'form-control'%>
 </div>

  <div class="mb-3 d-flex align-items-center">
  <%= f.check_box :remember_me, class: 'me-1'%>
  <%= f.label :remember_me, class: 'checkbox' %>
  </div>

 <div class="mb-3">
   <%= f.submit 'Sign in', class: 'btn btn-danger' %>
 </div>

<% end %>

<span class="">You don't have an account yet? <%= link_to "Sign up", signup_path, class: "btn-link"%> now</span>
  </div>
  </div>
